@page
@model TimetableSystem.Pages.teacher.ViewModel

@{
}

<style>
    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 5px;
        width: 175px; 
        height: 23px;
    }

    .inline {
        margin: 5px;
        float: left;
        margin: 5px;
    }
</style>

<body>
    <h1>Teacher Timetable</h1>
    <div class="inline">
        <table border="1">
            <thead>
                <tr>
                    <th>Time</th>
                    @foreach (var slot in Model.Slots)
                    {
                        <th>@slot.Name</th>
                    }
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Times.Count; i++)
                {
                    <tr>
                        <td>@Model.Times[i].Date</td>
                        @for (int j = 0; j < Model.Slots.Count; j++)
                        {
                            <td>@Model.TimetableTimeSlot[i][j]</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>

<script type="text/javascript" src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>

<script type="text/javascript" src="~/JS/site.js"></script>